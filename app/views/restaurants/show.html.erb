
<header>
    <p>
    <title>Your Restaurant Pick</title>
    <p>
        <%= link_to 'Home', welcome_index_path %> |
	      <%= link_to 'Restaurants', restaurants_path %>
    </p>
	<meta charset="UTF-8">
</header>

<div id= case>  
<h2>Restaurant</h2>
    <h1 id=center>
    <%=@restaurant.name%> <br>
    <%=@restaurant.location %> 
    </h1>
    <div id= desc>
    <%= @restaurant.description %>
    </div>




</table>
<table class=center>

    <tr class = "listing">
    <th class = "Name">Name</th><br>
    <br><th class = "Review">Review</th>
    <th class = "Rating">Rating</th>
    <th class = "Delete">Delete</th>
    <th class = "Edit">Edit</th>
    </tr>
  
<h2>Reviews:</h2>

<% @restaurant.reviews.each do |review| %>

<tr class >
<p>
  <td><%= review.commenter %></td>
  <td><%= review.review %></td>
  <td><%= review.rating %></td>
  <td><%= link_to 'Delete Review', [review.restaurant, review],
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
  <td><%= link_to 'Edit Review', [review.restaurant, review],
                    method: :patch %></td>
</p>
</tr>
<% end %>
</table>

<h2 text-align: center;>Add a review:</h2>

<%= render 'reviews/form' %>



