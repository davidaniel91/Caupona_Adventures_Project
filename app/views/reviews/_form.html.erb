<%= form_for([@restaurant, @restaurant.reviews.build]) do |f| %>

    
<p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %><br>
    <%= f.label :rating %><br>
    <%= f.text_field :rating %><br>
    <%= f.label :review %><br>
    <%= f.text_area :review %>
    
    
     <div id="error_explanation">
    <div class="alert">
      <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
      The review must fill these requirements to be saved:
      <li id="error_explanation">Commenter Field cannot be empty</li>
      <li id="error_explanation">Rating must be between 1 and 5</li>
      <li id="error_explanation">Review has a minimum requirement of 25 characters</li>
</div>
</div>
       
<p>
    <%= f.submit %>
</p>
<% end %>

