<%= form_for @review do |f| %>

    <% if @review.errors.any? %>
     <div id="error_explanation">
       <h2>
         <%= pluralize(@review.errors.count, "error") %> prohibited
         this review from being saved:
       </h2>
        <ul>
         <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
         <% end %>
        </ul>
     </div>
    <% end %>

<p>
    <%= f.label :Resturant %><br>
    <%= f.text_field :title %>
</p>

<p>
    <%= f.label :Review %><br>
    <%= f.text_area :text %>
</p>
<p>
    <%= f.label :rating %><br>
    <%= number_field_tag(:rating, value = 1, options = {:min => 1, :max => 5, :step => 0.1}) %>
</p>
<p>
    <%= f.submit %>
</p>
<% end %>

